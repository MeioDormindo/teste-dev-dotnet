@model CarrinhoDeComprasWEB.Models.ItensCarrinhoViewModel

<h2>Adicionar novo item Carrinho</h2>

<form asp-action="AdicionarItemCarrinho">
    <div class="form-horizontal">
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Produto" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Produto" class="form-control" />
                <span asp-validation-for="Produto" class="text-danger"></span>
            </div>
        </div>
            <div class="form-group col-md-4">
                <label asp-for="PrecoUnitario" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="PrecoUnitario" asp-format="{0:N2}" class="form-control" />
                    <span asp-validation-for="PrecoUnitario" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Quantidade" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Quantidade" class="form-control" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>
            </div>
        <div class="form-group" style="padding-top: 10px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Voltar a lista</a>
            </div>
        </div>
    </div>
</form>